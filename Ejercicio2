Class Purchase
		
	def initialize
		@list_of_products=[]
	end
	def products
		list_of_products
	end
	def add elem
		list_of_products << elem	
	end
	
	def delete elem
		list_of_products.delte(elem)
	end
	
	def total
		p list_of_products.inject(0){|sum, elem| sum+elem.price}
	end
	
	def apply_discount
		yield		
	end
end
p.apply_discount do |purchase|
	purchase.total -= purchase.total * 0.2  if purchase.products.size >10

p.apply_discount do |purchase|
	purchase.total	



